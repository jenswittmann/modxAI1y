{
    "name": "modxAI1y",
    "lowCaseName": "modxai1y",
    "description": "modxAI1y helps you with some AI magic to generate simple image captions in ContentBlocks.",
    "author": "Jens Wittmann",
    "version": "0.1.0-pl",
    "package": {
        "elements": {
            "plugins": [
                {
                    "name": "modxai1y",
                    "events": ["OnManagerPageBeforeRender"]
                }
            ]
        },
        "systemSettings": [
            {
                "key": "apikey",
                "type": "textfield",
                "area": "default",
                "value": ""
            },
            {
                "key": "image_caption_prompt",
                "type": "textfield",
                "area": "default",
                "value": ""
            }
        ]
    },
    "dependencies": [
        {
            "name": "php",
            "version": ">=7.2"
        },
        {
            "name": "modx",
            "version": ">=2.8"
        }
    ],
    "build": {
        "readme": "docs/readme.md",
        "license": "docs/license.md",
        "changelog": "docs/changelog.md"
    }
}
